# ============================================================================
# Investor Frontend Environment Configuration
# ============================================================================
# Copy this file to .env.local for local development
# For production (Vercel), set these in Vercel dashboard → Settings → Environment Variables
# All variables must be prefixed with NEXT_PUBLIC_ to be accessible in the browser

# ============================================================================
# Backend API Configuration
# ============================================================================

# Backend API Base URL
# Local: http://localhost:9000/v1
# Production: https://api.orbbit.finance/v1
NEXT_PUBLIC_API_BASE_URL=http://localhost:9000/v1

# ============================================================================
# Blockchain Configuration
# ============================================================================

# Base Mainnet (Chain ID: 8453)
NEXT_PUBLIC_BASE_MAINNET_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_MAINNET_CHAIN_ID=8453

# Base Sepolia Testnet (Chain ID: 84532) - for development/testing
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_BASE_SEPOLIA_CHAIN_ID=84532

# ============================================================================
# Smart Contract Addresses (deployed on Base)
# ============================================================================
# These will be populated after contract deployment

NEXT_PUBLIC_INVOICE_CONTRACT_ADDRESS=
NEXT_PUBLIC_FUNDING_POOL_CONTRACT_ADDRESS=
NEXT_PUBLIC_WHITELIST_CONTRACT_ADDRESS=

# USDC Token Address on Base Mainnet
NEXT_PUBLIC_USDC_TOKEN_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ============================================================================
# Wallet Connect (RainbowKit)
# ============================================================================
# Get from: https://cloud.walletconnect.com

NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

