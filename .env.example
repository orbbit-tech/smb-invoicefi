# ============================================================================
# Database Configuration (for Kanel type generation)
# ============================================================================
# These values connect to local Supabase instance
# Copy this file to .env and use for local development

# Local Supabase PostgreSQL connection
POSTGRES_HOST=localhost
POSTGRES_PORT=54322
POSTGRES_DATABASE=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ============================================================================
# Supabase Configuration (for runtime)
# ============================================================================
# Get these from Supabase Dashboard: https://app.supabase.com

# Local Supabase URLs
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Production Supabase URLs (when deploying)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key

# ============================================================================
# Blockchain Configuration
# ============================================================================

# Base Mainnet (Chain ID: 8453)
NEXT_PUBLIC_BASE_MAINNET_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_MAINNET_CHAIN_ID=8453

# Base Sepolia Testnet (Chain ID: 84532)
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_BASE_SEPOLIA_CHAIN_ID=84532

# Smart Contract Addresses (deployed on Base)
NEXT_PUBLIC_INVOICE_CONTRACT_ADDRESS=
NEXT_PUBLIC_FUNDING_POOL_CONTRACT_ADDRESS=
NEXT_PUBLIC_WHITELIST_CONTRACT_ADDRESS=

# USDC Token Address on Base
NEXT_PUBLIC_USDC_TOKEN_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ============================================================================
# Third-Party API Keys
# ============================================================================

# Wallet Connect (for RainbowKit)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Coinbase CDP (if using CDP SDK)
CDP_API_KEY_NAME=
CDP_API_KEY_PRIVATE_KEY=

# Block Explorer API Keys (for contract verification)
BASESCAN_API_KEY=
ETHERSCAN_API_KEY=
